@model ShareScript.Models.Patient

@{
    ViewData["Title"] = "Prescription Creation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #patient-page {
        position: absolute;
        left: 10vw;
    }

    #controlledSub{
        position: relative;
        left: 100px;
    }
</style>


<div id="patient-page">
    <h1>Prescription Creation</h1>
    <div class="container-fluid">
        <form method="POST">
            <div class="form-group">
                <label for="drugName">Name of Drug: </label>
                <input class="form-control" id="drugName" placeholder="Enter drug name" />
            </div>
            <div class="form-group">
                <label for="dosage">Dosage: </label>
                <input class="form-control" id="dosage" placeholder="Enter dosage for the drug">
            </div>
            <div class="form-check">
                <label class="form-check-label" for="controlledSub">Controlled Substance?</label>
                <input type="checkbox" class="form-check-input" id="controlledSub">
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
