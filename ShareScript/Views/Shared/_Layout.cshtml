<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShareScript</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/3.7.95/css/materialdesignicons.min.css">
</head>
<body>
    <div class="container">

        <div class="row">
            <div class="col-sm-8">
                <nav class="nav-main">
                    <input id="search" type="text" placeholder="Search..">
                    <a href="#" class="picture"></a>
                </nav>
            </div>

            <div class="col-sm-4">

                <!-- Sidebar-->
                <div class="nav-sidebar">
                    <ul id="sidebar_list">
                        <li>
                            <div class="btn-toggle-nav" id="burger-btn" onclick="toggleNav()">
                                <div class="btn-x"></div>
                                <div class="btn-x"></div>
                                <div class="btn-x"></div>
                            </div>
                        </li>
                        <li><span>ShareScript</span></li>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Inbox</a></li>
                        <li><a href="#">Drugs</a></li>
                        <li><a href='@Url.Action("Index", "Patient")'>Patients</a></li>
                        <li><a href="#">Calendar</a></li>
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Settings</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="row" id="content_span">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
